meta {
  name: 01_Empty_Text
  type: http
  seq: 1
}

post {
  url: {{BASE_URL}}/toxicity-detection
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  X-Api-Key: {{API_KEY}}
}

body:json {
  {
    "text": "",
    "region_name": "NA"
  }
}

tests {
  test("Status code is 400", function() {
    expect(res.getStatus()).to.equal(400);
  });

  test("Error message indicates empty text", function() {
    const json = res.getBody();
    expect(json).to.have.property('statusCode', 400);
    expect(json).to.have.property('message', 'Bad Request');
    expect(json.details.error).to.include('Field "text" must be a non-empty string');
  });
}
